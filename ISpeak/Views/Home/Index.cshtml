@{
    ViewBag.Title = "Home Page";
}
@model ISpeak.Models.Users
<!DOCTYPE html>
<html>
<head>
    <title>Registration and Login Form</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .bg {
            background-image: url("../../İmages/ispeak.png");
            background-size:cover;
        }
    </style>
</head>
<body class="bg text-white">

    <main>
        <div class="container">
            <div class="row">
                <!-- Left Side: Registration Form -->
                <div class="col-md-6">
                    <div class="card-body">

                        <h2>Registration</h2>
                        <!-- Add your registration form fields here -->
                        @using(Html.BeginForm("Create","Home",FormMethod.Post)){
                        <form>
                            <!-- Example form fields -->
                            <div class="form-group">
                                <label for="username">Username:</label>
                               
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })


                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })

                            </div>
                            <div class="form-group">s
                                <label for="password">Password:</label>
                               
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })

                            </div>
                            <!-- Add more form fields as needed -->
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                        }
                    </div>
                </div>

                <!-- Right Side: Login Form -->
                <div class="col-md-6">
                    <div class="card-body">
                        <h2>Login</h2>
                        <!-- Add your login form fields here -->
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                        {
                            <form>
                                <!-- Example form fields -->
                                <div class="form-group">
                                    <label for="login-username">Username:</label>
                                    
                                    @Html.PasswordFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    <label for="login-password">Password:</label>
                                     
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                                <!-- Add more form fields as needed -->
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>
                        }
                        </div>
                    
                </div>
            </div>
        </div>
    </main>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
     
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
