
@{
    ViewBag.Title = "friends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arkadaşlar ve Mesajlaşma</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .friends-list {
            background-color: #f0f0f0;
            padding: 15px;
            height: calc(100vh - 70px);
        }

        .messages {
            background-color: #f9f9f9;
            padding: 15px;
            height: calc(100vh - 70px);
        }

        .add-friend {
            background-color: #f0f0f0;
            padding: 15px;
            height: calc(100vh - 70px);
        }
          body {
            background-color: #f0f0f0; /* Sayfa arkaplan rengi */
        }

        .center-container {
            max-width: 400px; /* Orta bölümün maksimum genişliği */
            margin: 0 auto; /* Orta bölümü sayfanın ortasında hizalar */
            padding: 20px;
            background-color: #fff; /* Orta bölümün arkaplan rengi */
            border: 1px solid #007bff; /* Orta bölümün kenarlık rengi */
            border-radius: 10px; /* Orta bölümün kenar yuvarlatma */
        }

        .btn-primary {
            background-color: #007bff; /* Mavi buton arkaplan rengi */
            border-color: #007bff; /* Mavi buton kenarlık rengi */
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .chat-container {
            max-width: 600px;
            margin: 20px auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #fff;
        }

        .message {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

            .message:last-child {
                border-bottom: none;
            }

            .message .sender {
                font-weight: bold;
            }

            .message .timestamp {
                font-size: 12px;
                color: #888;
            }

        .input-container {
            display: flex;
            align-items: center;
            padding: 10px;
            border-top: 1px solid #ccc;
        }

            .input-container input {
                flex: 1;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 20px;
            }

            .input-container button {
                margin-left: 10px;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sol Tarafta Arkadaşlar Listesi -->
            <div class="col-md-3 friends-list">
                <h3>Arkadaşlar Listesi</h3>
                <ul>
                    <li>Arkadaş 1</li>
                    <li>Arkadaş 2</li>
                    <li>Arkadaş 3</li>
                    <!-- ... Daha fazla arkadaş eklenebilir -->
                </ul>
            </div>

            <!-- Orta Kısımda Mesajlaşma Ekranı -->
            <div class="col-md-6 messages">
                <div class="chat-container">
                    <div class="message">
                        <span class="sender">John Doe</span>
                        <p>Hello, how are you?</p>
                        <span class="timestamp">12:34 PM</span>
                    </div>
                    <div class="message">
                        <span class="sender">Jane Smith</span>
                        <p>Hi John! I'm doing well, thanks.</p>
                        <span class="timestamp">12:35 PM</span>
                    </div>
                    <!-- More messages can be added here -->
                    <div class="input-container">
                        <input type="text" placeholder="Type your message..." />
                        <button class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>

            <!-- Sağ Tarafta Arkadaş Ekleme Ekranı -->
            <div class="col-md-3 add-friend">
                <h3>Arkadaş Ekleme</h3>
                <form>
                    <div class="form-g d-flex">
                        <input type="search" class="form-control" placeholder="Ara" />
                        <button class="btn btn-primary ml-2">Ara</button>
                    </div>
                    <div class="form-g mt-2">
                

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
